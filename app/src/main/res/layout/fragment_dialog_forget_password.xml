<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <TextView
        android:id="@+id/forgot_password_text_logo"
        style="@style/TextView.ForgotPassword"/>

    <TextView
        android:id="@+id/forgot_password_message"
        android:layout_below="@+id/forgot_password_text_logo"
        style="@style/TextView.ForgotPasswordMessage"/>

    <EditText
        android:id="@+id/send_email_edit_text"
        android:layout_below="@+id/forgot_password_message"
        style="@style/ForgotPasswordEditText"/>

    <Button
        android:id="@+id/send_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/send_email_edit_text"
        style="@style/ForgotPasswordSendButton"/>

</RelativeLayout>